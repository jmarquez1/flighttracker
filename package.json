{
  "name": "flight-tracker-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev -w apps/web",
    "dev:worker": "npm run dev -w apps/worker",
    "build": "npm run build --workspaces",
    "start": "concurrently --kill-others \"npm run start:web\" \"npm run start:worker\"",
    "start:web": "npm run start -w apps/web",
    "start:worker": "npm run start -w apps/worker",
    "lint": "npm run lint --workspaces"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "concurrently": "^9.1.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "devDependencies": {
    "rimraf": "^5.0.0"
  }
}
