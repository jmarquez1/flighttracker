{
  "name": "flight-tracker-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev -w apps/web",
    "dev:worker": "npm run dev -w apps/worker",
    "build": "npm run build --workspaces",
    "start": "npm run start:web",
    "start:web": "npm run start -w apps/web",
    "start:worker": "npm run start -w apps/worker",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "rimraf": "^5.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
