{
  "name": "flight-tracker-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev -w apps/web",
    "dev:worker": "npm run dev -w apps/worker",
    "build": "npm run build --workspaces",
    "start": "node -e \"const cp = require('child_process'); const cmd = process.env.SERVICE_TYPE === 'worker' ? 'npm run start:worker' : 'npm run start:web'; cp.execSync(cmd, { stdio: 'inherit' });\"",
    "start:web": "npm run start -w apps/web",
    "start:worker": "npm run start -w apps/worker",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "rimraf": "^5.0.0"
  }
}
